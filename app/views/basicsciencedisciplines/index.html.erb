<div class="row">
              <div class="col-md-12">
                  <%= link_to 'New Basic Science Discipline', new_basicsciencediscipline_path %> <br><br>
                <!-- BOX -->
                <div class="box border primary">
                  <div class="box-title">
                    <h4><i class="fa fa-table"></i>Basic Science Disciplines</h4>
                    <div class="tools hidden-xs">
                      <a href="#box-config" data-toggle="modal" class="config">
                        <i class="fa fa-cog"></i>
                      </a>
                      <a href="javascript:;" class="reload">
                        <i class="fa fa-refresh"></i>
                      </a>
                      <a href="javascript:;" class="collapse">
                        <i class="fa fa-chevron-up"></i>
                      </a>
                      <a href="javascript:;" class="remove">
                        <i class="fa fa-times"></i>
                      </a>
                    </div>
                  </div>
                  <div class="box-body">
                    <table id="datatable3" cellpadding="0" cellspacing="0" border="0" class="datatable table table-striped table-bordered table-hover">
                      <thead>
                        <tr>
                            
                            <th>Discipline name</th>
                            <th class="hidden-xs">Actions</th>
                        </tr>
                      </thead>
                      <tbody>
                          <% @basicsciencedisciplines.each do |basicsciencediscipline| %>
                              <tr class="gradeX">
                                <td><%= basicsciencediscipline.disciplinename %></td>
                                <td class="hidden-xs"><%#= link_to 'View', user %>
                                  <%= link_to 'Edit', edit_basicsciencediscipline_path(basicsciencediscipline) %> | 
                                  <%= link_to 'Delete', basicsciencediscipline, method: :delete, data: { confirm: 'Are you sure?' } %>
                                </td>
                              </tr>
                         <% end %>
                      </tbody>
                      <tfoot>
                        <tr>
                            <th>Discipline name</th>
                            <th class="hidden-xs">Actions</th>
                        </tr>
                      </tfoot>
                    </table>
                  </div>
                </div>
                <!-- /BOX -->

              </div>
            </div>
