<div class="col-md-6">
                <!-- BOX -->
                <%= link_to 'Add a New Language', new_language_path %><br><br>

                <div class="box border orange">
                  <div class="box-title">
                    <h4><i class="fa fa-hand-o-up"></i>Language List</h4>
                  
                  </div>
                  <div class="box-body">
                    <table class="table table-hover">
                      <thead>
                        <tr>
                        <th>Language</th>
                        <th>Abbreviation</th>
                        <th>Actions</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% @languages.each do |language| %>
                          <tr>
                            <td><%= language.language %></td>
                            <td><%= language.abbreviation %></td>
                            <td>
                              <%= link_to 'Edit', edit_language_path(language) %> | 
                              <%= link_to 'Delete', language, method: :delete, data: { confirm: 'Are you sure?' } %>
                            </td>
                          </tr>
                        <% end %>
                      </tbody>
                      </table>
                  </div>
                </div>
                <!-- /BOX -->
              </div>

<br />




<%= render 'shared/javascript' %>

<script>
    jQuery(document).ready(function() {   
      App.setPage("languages");  //Set current page
      App.init(); //Initialise plugins and elements      
    });
</script>