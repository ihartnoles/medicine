<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div class="alert alert-block alert-danger">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :username %><br />
    <%= f.text_field :username , readonly: "true" %>
  </div>
  <!--
  <div class="field">
    <%= f.label :usertype_id %><br />
    <%= f.number_field :usertype_id %>
  </div>
  -->
  <div class="field">
    <%= label_tag(:permissionid, "Permission") %><br>
    <%= collection_select(:user, :usertype_id, Permissiongroup.all, :id, :groupname, { :selected => @user.usertype_id }) %>
  </div>
  <div class="field">
    <%= f.label :firstname %><br />
    <%= f.text_field :firstname %>
  </div>
  <div class="field">
    <%= f.label :lastname %><br />
    <%= f.text_field :lastname %>
  </div>
  <div class="field">
    <%= f.label :phone %><br />
    <%= f.text_field :phone %>
  </div>
  <br>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
