<div class="box border green">
    <div class="box-title">
        
        <h4><i class="fa fa-table"></i>Affiliates</h4>
        
        <div class="tools hidden-xs">
            <a href="#box-config" data-toggle="modal" class="config">
                <i class="fa fa-cog"></i>
            </a>
            <a href="javascript:;" class="reload">
                <i class="fa fa-refresh"></i>
            </a>
            <a href="javascript:;" class="collapse">
                <i class="fa fa-chevron-up"></i>
            </a>
            <a href="javascript:;" class="remove">
                <i class="fa fa-times"></i>
            </a>
        </div>
    </div>



    <div class="box-body">
        <table id="datatable1" cellpadding="0" cellspacing="0" border="0" class="datatable table table-striped table-bordered table-hover">
         <thead>
          <tr>
            <th>Znumber</th>
            <th>Prefix</th>
            <th>Firstname</th>
            <th>Middlename</th>
            <th>Lastname</th>
            <th>Suffix</th>
            <th>License</th>
            <th></th>
          </tr>
        </thead>

        <tbody>
            <% @affiliates.each do |affiliate| %>
              <tr class="gradeA">
                <td><%= affiliate.znumber %></td>
                <td><%= affiliate.prefix %></td>
                <td><%= affiliate.firstname %></td>
                <td><%= affiliate.middlename %></td>
                <td><%= affiliate.lastname %></td>
                <td><%= affiliate.suffix %></td>
                <td><%= affiliate.license %></td>
                <td>
                <%= link_to 'Show', affiliate %> |
                <%= link_to 'Edit', edit_affiliate_path(affiliate) %> |
                <%= link_to 'Destroy', affiliate, method: :delete, data: { confirm: 'Are you sure?' } %>
                </td>
              </tr>
            <% end %>
        </tbody>

        <tfoot>
            <tr>
                <th>Znumber</th>
                <th>Prefix</th>
                <th>Firstname</th>
                <th>Middlename</th>
                <th>Lastname</th>
                <th>Suffix</th>
                <th>License</th>
                <th></th>                
            </tr>
        </tfoot>

        </table>

        <br />

        <%= link_to 'New Affiliate', new_affiliate_path %>

    </div>
</div>

<!-- JQUERY -->
    <%= render 'shared/javascript' %>

    <script>
        jQuery(document).ready(function() {     
            App.setPage("dynamic_table");  //Set current page
            App.init(); //Initialise plugins and elements
        });
    </script>