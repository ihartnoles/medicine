<%= form_for :clinicalsection, :html => {:class => 'form', :id => 'searchform' } do |f| %>   
	<b>Section:</b><br>
    <%#= collection_select(:clinicalsection, :id, Clinicalsection.all, :id, :sectionname) %>

    <% if !@sections.blank? %>
      <%= f.select :section_id, @sections.collect{ |s| [s.sectionname,s.id]}, :include_blank => 'Please select a clinical section'%>
    <% else %>
      <%= f.select :section_id, :collection=>[] %>
    <% end %>

 <% end %>
