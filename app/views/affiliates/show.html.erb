<h3>Add Languages Spoken</h3>

<%= form_for(@languagespoken) do |f| %>
  <%= hidden_field_tag :affiliate_id, params[:id] %>
  <%#= hidden_field_tag "languages[language_ids][]", nil %>
  <%#= collection_select(:language, :id, Language.all, :language_id, :language) %>
  
  <% @languagelist.each do |lang| %>
    <%= check_box_tag 'languages[language_ids][]', lang.id, Affiliatelanguage.where(:affiliate_id => params[:id]).pluck(:language_id).include?(lang.id) %> 
    <%#= f.check_box :language_id %><%= lang.language %><br/>
  <% end %>


   <div class="actions">
    <%= f.submit 'Update Languages Spoken' %>
  </div>
<% end %>

